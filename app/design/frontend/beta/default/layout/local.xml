                </block>

                <block type="catalog/product_view" name="product.pengembalian" as="pengembalian" template="icube/catalog/product/view/return_refund_policy.phtml" after="product.penggunaan">
                    <action method="addToParentGroup"><group>detailed_info</group></action>
