                    <!-- Add review form -->
                    <block type="review/form" name="product.review.form" as="review_form"  after="product.attributes"/>
                </block>
                
                <block type="core/template" name="product.pembelian" as="pembelian" template="icube/catalog/product/view/how_to_buy.phtml" after="product.reviews">
                    <action method="addToParentGroup"><group>detailed_info</group></action>
                    <action method="setTitle" translate="value"><value>Pembelian</value></action>
                </block>

                <block type="catalog/product_view" name="product.penggunaan" as="penggunaan" template="icube/catalog/product/view/how_to_use.phtml" after="product.pembelian">
                    <action method="addToParentGroup"><group>detailed_info</group></action>
